<div class="row">
  <div class="col-xs-12 col-md-6">
    <%= simple_form_for(@crime_type) do |f| %>
      <% if @crime_type.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@crime_type.errors.count, "error") %> prohibited this crime type from being saved:</h2>
          <ul>
          <% @crime_type.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.input :id, disabled: true, input_html: {class: 'form-control'} %>
        <%= f.input :name, input_html: {class: 'form-control'} %>
        <%= f.input :display_name, input_html: {class: 'form-control'} %>
        <%= f.input :description, input_html: {class: 'form-control'} %>
        <%= f.input :subtype_of, input_html: {class: 'form-control'} %>
        <%= f.input :crime_weight, prompt: 'Crime Weight' %>
        <%= f.input :crime_scale, collection: 0..10 %>
        <%= f.label :violent %>

        <%= f.collection_radio_buttons :violent, [[true, 'Yes'], [false, 'No']], :first, :last %>
      </div>
        <%= f.button :submit,class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
