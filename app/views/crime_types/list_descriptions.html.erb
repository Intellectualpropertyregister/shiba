<h1><%= @crime_type.name %></h1>
<div class="row">
  <div class="col-xs-12 col-md-10">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @crime_type.crime_type_descriptions.each do |crime_type_description| %>
          <tr>
            <td><%= crime_type_description.id %></td>
            <td><%= crime_type_description.description %></td>
            <td><%= link_to 'Edit', edit_crime_type_description_path(crime_type_description) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
