<h1>Listing crime types</h1>
<div class="row">
  <div class="col-xs-12 col-md-10">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Display Name</th>
          <th>Description</th>
          <th>Violent</th>
          <th>Weight</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @crime_types.each do |crime_type| %>
          <tr>
            <td><%= crime_type.id %></td>
            <td><%= link_to crime_type.name, list_descriptions_crime_type_path(crime_type) %></td>
            <td><%= crime_type.display_name %></td>
            <td><%= crime_type.description %></td>
            <td><%= crime_type.violent %></td>
            <td><%= crime_type.crime_weight %></td>
            <td><%= link_to 'Edit', edit_crime_type_path(crime_type) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Crime Type', new_crime_type_path %>
