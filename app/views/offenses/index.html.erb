<h1>Listing offenses</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Score</th>
      <th>Crime type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offenses.each do |offense| %>
      <tr>
        <td><%= offense.description %></td>
        <td><%= offense.score %></td>
        <td><%= offense.crime_type %></td>
        <td><%= link_to 'Show', offense %></td>
        <td><%= link_to 'Edit', edit_offense_path(offense) %></td>
        <td><%= link_to 'Destroy', offense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offense', new_offense_path %>
